<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="CustomTitleView">
        <attr name="titleText" format="string"/>
        <attr name="titleTextColor" format="color"/>
        <attr name="titleTextSize" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="CustomImageView">

        <attr name="image" format="reference"/>
        <attr name="imageScaleType" format="enum">
            <enum name="fitXY" value="0"/>
            <enum name="center" value="1"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="ProgressView">
        <attr name="firstColor" format="color"/>
        <attr name="secondColor" format="color"/>
        <attr name="innerRadius1" format="dimension"/>
        <attr name="ringWidth" format="dimension"/>
        <attr name="speed" format="integer"/>
    </declare-styleable>

    <declare-styleable name="MyFeatureHighlightView">
        <attr name="innerRadius" format="dimension"/>
        <attr name="outerRadius" format="dimension"/>
        <attr name="innerBackground" format="color"/>
        <attr name="outerBackground" format="color"/>
    </declare-styleable>

</resources>