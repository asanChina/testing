<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.google.pengjie.second.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/button_test_coordinator_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="test coordinator layout"
            android:textSize="25sp"/>

        <Button
            android:id="@+id/button_test_custom_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="test custom view"
            android:textSize="25sp"/>

        <Button
            android:id="@+id/button_test_feature_highlight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="test feature highlight"
            android:textSize="25sp"/>

        <Button
            android:id="@+id/button_test_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="test menu"
            android:textSize="25sp"/>

        <Button
            android:id="@+id/button_test_material_feature_highlight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="test material feature highlight"
            android:textSize="25sp"/>


        <Button
            android:id="@+id/button_test_popup_window"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="test popup window"
            android:textSize="25sp"/>

        <Button
            android:id="@+id/button_test_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="test dialog"
            android:textSize="25sp"/>

        <Button
            android:id="@+id/button_test_media_player"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="test media player"
            android:textSize="25sp"/>

        <Button
            android:id="@+id/button_test_handler"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="test handler"
            android:textSize="25sp"/>

        <Button
            android:id="@+id/button_test_navigation_drawer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="test navigation drawer"
            android:textSize="25sp"/>

        <Button
            android:id="@+id/button_test_view_pager"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="test view pager"
            android:textSize="25sp"/>

        <Button
            android:id="@+id/button_test_recycler_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="test recycler view"
            android:textSize="25sp"/>

        <Button
            android:id="@+id/button_test_fire_intent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="test fire intent"
            android:textSize="25sp"/>

        <Button
            android:id="@+id/button_test_transparent_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="test transparent activity"
            android:textSize="25sp"/>

        <Button
            android:id="@+id/button_test_handle_intent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="test handle intent"
            android:textSize="25sp"/>

        <Button
            android:id="@+id/button_test_drawable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="test drawable"
            android:textSize="25sp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_test_material_design_components"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="test material design components"
            android:textSize="25sp"
            app:icon="@drawable/ic_done_black_24dp"/>

        <Button
            android:id="@+id/button_test_progress_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="test progress bar"/>

        <Button
            android:id="@+id/button_test_language"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/test_language"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_installed"/>

        <EditText
            android:layout_width="match_parent"

            android:layout_height="wrap_content" />

    </LinearLayout>

</ScrollView>
